<UserControl x:Class="CirclesManagement.Components.SearchBoxComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CirclesManagement.Components"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}" Loaded="OnLoaded">
    <Border BorderThickness="0.5">
        <TextBox x:Name="TBSearch" Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged}" Padding="5"
                 GotFocus="TBSearch_GotFocus" LostFocus="TBSearch_LostFocus"/>
    </Border>
</UserControl>
