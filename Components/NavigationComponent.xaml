<UserControl x:Class="CirclesManagement.Components.NavigationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CirclesManagement.Components"
             mc:Ignorable="d" x:Name="Root" Style="{StaticResource CommonStyle}">
    <ListBox x:Name="InnerListBox" ItemsSource="{Binding ItemsSource, ElementName=Root}"
             BorderThickness="0" SelectionMode="Single" HorizontalContentAlignment="Stretch">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding ., StringFormat={}&#8226; {0}}" Padding="5"/>
                    <Separator UseLayoutRounding="True"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
