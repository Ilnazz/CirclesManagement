<local:EntityPage x:Class="CirclesManagement.Pages.LessonEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d" Style="{StaticResource CommonStyle}"
      Title="Страница редактирования урока">
    <local:EntityPage.DataGridColumns>
        <DataGridTextColumn Header="Ученик" Width="*" Binding="{Binding Pupil.FullName}" ElementStyle="{StaticResource DGTextColumnStyle}"/>

        <DataGridCheckBoxColumn Header="Присутствие на уроке" Width="*" Binding="{Binding WasInClass}"/>
    </local:EntityPage.DataGridColumns>
</local:EntityPage>
