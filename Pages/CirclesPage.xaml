<local:EntityPage x:Class="CirclesManagement.Pages.CirclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
      Style="{StaticResource CommonStyle}">
    <local:EntityPage.Columns>
        <DataGridTextColumn Header="Название" Width="*"
                        Binding="{Binding Path=Title}"/>
        <DataGridTextColumn Header="Макс. число учеников" Width="*"
                        Binding="{Binding Path=MaxNumberOfPupils}"/>
    </local:EntityPage.Columns>
</local:EntityPage>
