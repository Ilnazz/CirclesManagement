<local:EntityPage x:Class="CirclesManagement.Pages.CirclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d"
      Style="{StaticResource CommonStyle}" Title="Кружки">
    <local:EntityPage.DataGridColumns>
        <DataGridTextColumn Header="Название" Width="3*" ElementStyle="{StaticResource DGTextColumnStyle}"
                        Binding="{Binding Path=Title}"/>
        <DataGridTextColumn Header="Макс. число учеников" Width="*" ElementStyle="{StaticResource DGTextColumnStyle}"
                        Binding="{Binding Path=MaxNumberOfPupils}"/>
    </local:EntityPage.DataGridColumns>
</local:EntityPage>
