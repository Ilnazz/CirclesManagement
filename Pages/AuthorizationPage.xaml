<Page x:Class="CirclesManagement.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d" 
      Title="AuthPage" Style="{StaticResource CommonStyle}">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Target="{Binding ElementName=TBUserLogin}" Content="Логин пользователя:"/>
            <TextBox x:Name="TBUserLogin" MaxLength="50" Margin="5" Text="ivanov_i_i" PreviewKeyDown="Field_PreviewKeyDown"/>
            
            <Label Target="{Binding ElementName=PBUserPassword}" Content="Пароль пользователя:"/>
            <PasswordBox x:Name="PBUserPassword" MaxLength="50" Margin="5" Password="ivanov_i_i" PreviewKeyDown="Field_PreviewKeyDown"/>
            
            <Button x:Name="BAuthorize" Content="Войти" Margin="5,10" Click="BAuthorize_Click"/>
        </StackPanel>
    </Grid>
</Page>
