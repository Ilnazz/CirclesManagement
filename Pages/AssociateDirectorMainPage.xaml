<Page x:Class="CirclesManagement.Pages.AssociateDirectorMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное меню зам. директора по воспитательной работе">
    <Grid>
        <TabControl>
            <TabItem Header="Главная" IsSelected="True">
            </TabItem>
            <TabItem Header="Кружки">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                    </StackPanel>
                    <DataGrid Name="DGCirclesList" Grid.Row="0" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Width="1*" Binding="{Binding Title}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Название" Width="1*" Binding="{Binding IsWorking}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Учителя">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Button_GoToRegisterTeacherPage" Margin="5" Grid.Row="1" Content="Зарегистрировать нового учителя в системе" />
                        <Button x:Name="Button_DismissTeacher" Margin="5" Content="Уволить учителя" />
                    </StackPanel>
                    <DataGrid Name="DGTeacherList" Grid.Row="0" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Фамилия" Width="1*" Binding="{Binding LastName}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Имя" Width="1*" Binding="{Binding FirstName}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Отчество" Width="1*" Binding="{Binding Patronymic}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Раписание">
                <StackPanel>
                    <DataGrid Name="DGTimetable" Grid.Row="0" Margin="5" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Учитель" Width="1*" Binding="{Binding Teacher.LastName}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Кабинет" Width="1*" Binding="{Binding Classroom.Number}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Кружок" Width="1*" Binding="{Binding Circle.Title}"></DataGridTextColumn>
                            <DataGridTextColumn Header="День недели" Width="1*" Binding="{Binding WeekDay.Title}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Время" Width="1*" Binding="{Binding Time}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
