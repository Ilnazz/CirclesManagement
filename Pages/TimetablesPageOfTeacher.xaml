<local:EntityPage x:Class="CirclesManagement.Pages.TimetablesPageOfTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CirclesManagement.Pages"
      mc:Ignorable="d" Style="{StaticResource CommonStyle}"
      Title="Расписание">
    <local:EntityPage.DataGridColumns>



        <DataGridTextColumn Header="День недели" Width="0.33*" IsReadOnly="True"
                            Binding="{Binding WeekDay.Title}" ElementStyle="{StaticResource DGTextColumnStyle}"/>

        <DataGridTextColumn Header="Время" Width="0.33*" IsReadOnly="True" ElementStyle="{StaticResource DGTextColumnStyle}"
                            Binding="{Binding Time, Converter={StaticResource TimeConverter}, StringFormat=hh\\:mm}"/>



        <DataGridTextColumn Header="Кабинет" Width="0.33*" ElementStyle="{StaticResource DGTextColumnStyle}"
                            Binding="{Binding Classroom.NumberAndTitle}" IsReadOnly="True" />



        <DataGridTextColumn Header="Кружок" Width="*" IsReadOnly="True" ElementStyle="{StaticResource DGTextColumnStyle}"
                            Binding="{Binding Group.Circle.Title}"/>



    </local:EntityPage.DataGridColumns>
</local:EntityPage>
